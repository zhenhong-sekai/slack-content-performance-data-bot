{
  "family": "optibot-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::010526279899:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::010526279899:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "optibot",
      "image": "010526279899.dkr.ecr.us-east-1.amazonaws.com/optibot:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "secrets": [
        {
          "name": "SLACK_BOT_TOKEN",
          "valueFrom": "arn:aws:ssm:us-east-1:010526279899:parameter/optibot/slack-bot-token"
        },
        {
          "name": "SLACK_APP_TOKEN",
          "valueFrom": "arn:aws:ssm:us-east-1:010526279899:parameter/optibot/slack-app-token"
        },
        {
          "name": "SLACK_SIGNING_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:010526279899:parameter/optibot/slack-signing-secret"
        },
        {
          "name": "MCP_SERVER_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:010526279899:parameter/optibot/mcp-server-url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/optibot",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
