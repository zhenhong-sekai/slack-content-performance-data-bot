# Slack Configuration (Socket Mode)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3000
MCP_SERVER_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/slack_bot
DATABASE_POOL_SIZE=10

# Application Configuration
APP_NAME=slack-data-query-bot
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security (Optional - defaults provided)
# SECRET_KEY=your-secret-key-here-change-in-production
# JWT_SECRET_KEY=your-jwt-secret-key-here

# File Storage
TEMP_FILE_PATH=/tmp/slack_bot_files
MAX_FILE_SIZE_MB=50
FILE_CLEANUP_HOURS=1

# Performance
MAX_CONCURRENT_QUERIES=10
QUERY_TIMEOUT_SECONDS=60
RATE_LIMIT_PER_MINUTE=30

# Monitoring
METRICS_PORT=8001
HEALTH_CHECK_TIMEOUT=5

# External Services
PROMETHEUS_PUSHGATEWAY_URL=
SENTRY_DSN=